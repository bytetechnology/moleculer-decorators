{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "exclude": ["node_modules", "dist"]
}
