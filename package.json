{
  "name": "typed-moleculer",
  "version": "1.0.0",
  "description": "Decorators and typed broker for moleculer. Fork/consolidation of moleculer-decorators@1.3.0 and moleculer-service-ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint --fix \"**/*.{js,ts}\"",
    "build": "tsc",
    "compile": "npm run clean && npm run build && node dist/index.js",
    "dev": "nodemon --delay 2000 -e ts --exec \"npm run compile\"",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "preversion": "npm run lint && npm run build && npm run test",
    "postversion": "git push && git push --follow-tags"
  },
  "author": "Wojciech Fiderek <wojciech.fiderek.dev@gmail.com> (fork of Colonelbundy <colonelbundy@gmail.com>)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-decorators.git"
  },
  "keywords": [
    "microservices",
    "microservice",
    "decorator",
    "typescript",
    "moleculer"
  ],
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-decorators/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-decorators#readme",
  "dependencies": {
    "deep-copy": "^1.4.2"
  },
  "peerDependencies": {
    "moleculer": "^0.14.15"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "moleculer-db": "^0.8.14",
    "moleculer-web": "^0.10.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
