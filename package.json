{
  "name": "moleculer-decorators-extra",
  "version": "1.1.0",
  "description": "Decorators for moleculer. Fork of moleculer-decorators@1.3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "tsc": "tsc",
    "compile": "npm run clean && tsc && node dist/index.js",
    "dev": "nodemon --delay 2000 -e ts --exec \"npm run compile\"",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "preversion": "npm run lint && npm run tsc && npm run test",
    "postversion": "git push && git push --follow-tags"
  },
  "author": "Wojciech Fiderek <wojciech.fiderek.dev@gmail.com> (fork of Colonelbundy <colonelbundy@gmail.com>)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-decorators.git"
  },
  "keywords": [
    "microservices",
    "microservice",
    "decorator",
    "typescript",
    "moleculer"
  ],
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-decorators/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-decorators#readme",
  "dependencies": {
    "deep-copy": "1.4.2",
    "moleculer": "^0.14.13"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.3",
    "moleculer-db": "^0.8.14",
    "moleculer-web": "^0.9.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
